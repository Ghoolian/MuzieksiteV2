<h1>{{ 'Recover your password'|trans }}</h1>

<form method="post">
    <div class="form-group">
        <label for="new-password">{{ 'New password'|trans }}</label>
        <input type="password" name="new_password" class="form-control" id="new-password" required>
    </div>
    <div class="form-group">
        <label for="repeat-password">{{ 'Repeat new password'|trans }}</label>
        <input type="password" name="repeat_password" class="form-control" id="repeat-password" required>
    </div>
    <button type="submit">{{ 'Change password'|trans }} </button>
</form>
