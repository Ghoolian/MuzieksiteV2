{% extends 'base.html.twig' %}

{% block title %}{{ 'Login'|trans }}{% endblock %}

{% block body %}
    <h1>Login</h1>
    {% if error %}
        <div style="color:red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
{#    <form action="{{ path('security_login') }}" method="post">
        <input type="email" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'E-mail'|trans }}"> <br/>
        <input type="password" name="_password" class="form-control" placeholder="{{ 'Password'|trans }}"> <br/>
        <input type="submit" value="{{ 'Login'|trans }}"> <br/>
    </form>#}

<div class="wrapper-page account-page-full">

    <div class="card">
        <div class="card-block">

            <div class="account-box">

                <div class="card-box p-5">
                    <h2 class="text-uppercase text-center pb-4">
                        <a href="{{ path('home') }}" class="text-success">
                            <span><img src="assets/images/logo_light.png" alt="" height="26"></span>
                        </a>
                    </h2>

                    <form class="" action="{{ path('security_login')}}" method="post">

                        <div class="form-group row">
                            <div class="col-12">
                                <label for="emailaddress">Email address</label>
                                <input name="_username" class="form-control" type="email" id="_username" value="{{ last_username }}" required="" placeholder="{{ 'Email'|trans }}">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <a class="text-muted float-right" href="{{ path('security_forgot_password') }}"><small>Forgot your password?</small></a>
                                <label for="password">Password</label>
                                <input name="_password" class="form-control" type="password" required="" id="_password" placeholder="{{ 'Password'|trans }}">
                            </div>
                        </div>



                        <div class="form-group row text-center">
                            <div class="col-12">
                                <button class="btn btn-block btn-custom waves-effect waves-light" type="submit" value="{{ 'Login'|trans }}">Sign In</button>
                            </div>
                        </div>

                    </form>

                    <div class="row m-t-50">
                        <div class="col-sm-12 text-center">
                            <p class="text-muted">Don't have an account? <a class="text-dark ml-1" href="{{ path('security_register') }}">{{ 'Create account'|trans }}</a></p>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>



{% endblock %}
