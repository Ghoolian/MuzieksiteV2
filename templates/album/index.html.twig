{% extends 'base.html.twig' %}

{% block title %}Albums index{% endblock %}

{% block body %}
    <h1>Albums index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Naam</th>
            <th>Artiest naam</th>
            <th>Numbers</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>

        {% for album in album %}
            <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.name }}</td>
                <td>{{ album.artist.naam}} {{ album.artist.achternaam  }}</td>
                <td></td>



                <td>
                    <a href="{{ path('album_show', {'id': album.id}) }}">show</a>
                    {% if app.user %}
                    {% if app.user.isSuper == "1" %}
                    <div class="mb-3">
                <td><a href="{{ path('album_edit', {'id': album.id}) }}">edit</a></td>

                {% endif %}
                {% endif %}

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('album_new') }}">Create new</a> <br/> <br />
    <a href="{{ path('home') }}">Back to homepage</a>
{% endblock %}