{% extends 'base.html.twig' %}

{% block title %}Number index{% endblock %}

{% block body %}
    <h1>Number index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Duration</th>
            <th>Album</th>
            <th>Artist</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for number in number %}
            <tr>
                <td>{{ number.id }}</td>
                <td>{{ number.name }}</td>
                <td>{{ number.duration|date('h:i:s') }}</td>
                <td>{{ number.album.name }}</td>
                <td>{{ number.album.artist.naam }} {{ number.album.artist.achternaam  }}</td>
                <td>
                    <a href="{{ path('number_show', {'id': number.id}) }}">show</a>

                    {% if app.user %}
                    {% if app.user.isSuper == "1" %}
                    <div class="mb-3">
                <td><a href="{{ path('number_edit', {'id': number.id}) }}">edit</a></td>
                {% endif %}
                {% endif %}

            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('number_new') }}">Create new</a> <br/> <br/>
    <a href="{{ path('home') }}">Back to homepage</a>

{% endblock %}
